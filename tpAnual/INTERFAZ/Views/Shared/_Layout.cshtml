@using TPANUAL
@{
    Usuario usuario = (Usuario) Session["Usuario"];
}

<!doctype html>
<html lang="en">
<head>
    <title>GeSoc - @ViewBag.Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--  Fonts and icons  -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Black Dashboard CSS -->
    <link href="/Content/black-dashboard.css?v=1.0.0" rel="stylesheet" />
    <link href="/Content/Site.css" rel="stylesheet" />
</head>
<body class="">
    <div class="wrapper">
        <div class="sidebar">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red"
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="javascript:void(0)" class="simple-text logo-normal text-center">
                        Opciones
                    </a>
                </div>
                <ul class="nav">
                    @{
                        if (ViewBag.Title == "Egresos")
                        {
                            <li class="active ">
                                <a href="~/Home/Egresos">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <p>Egresos</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="~/Home/Egresos">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <p>Egresos</p>
                                </a>
                            </li>
                        }
                    }

                    @{
                        if (ViewBag.Title == "Ingresos")
                        {
                            <li class="active ">
                                <a href="~/Home/Ingresos">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <p>Ingresos</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="~/Home/Ingresos">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <p>Ingresos</p>
                                </a>
                            </li>
                        }
                    }

                    @{
                        if (ViewBag.Title == "Organización")
                        {
                            <li class="active ">
                                <a href="~/Home/Organizacion">
                                    <i class="fas fa-city"></i>
                                    <p>Organización</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="~/Home/Organizacion">
                                    <i class="fas fa-city"></i>
                                    <p>Organización</p>
                                </a>
                            </li>
                        }
                    }

                    @{
                        if (ViewBag.Title == "Vinculador")
                        {
                            <li class="active ">
                                <a href="~/Home/Vinculador">
                                    <i class="fas fa-cog"></i>
                                    <p>Vinculador</p>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="~/Home/Vinculador">
                                    <i class="fas fa-cog"></i>
                                    <p>Vinculador</p>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-absolute navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle d-inline">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="javascript:void(0)">GeSoc</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navigation">
                        <ul class="navbar-nav ml-auto">
                            <li class="dropdown nav-item">
                                <a href="javascript:void(0)" class="dropdown-toggle nav-link" data-toggle="dropdown">
                                    <i class="fas fa-user-circle"></i>
                                    &nbsp;
                                    @usuario.NombreUsuario
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                    <b class="caret d-none d-lg-block d-xl-block"></b>
                                </a>
                                <ul class="dropdown-menu dropdown-navbar dropdown-black">
                                    <li class="nav-link">
                                        <a href="~/Home/Index" class="nav-item dropdown-item">
                                            Cerrar sesión
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="modal modal-search fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModal" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="SEARCH">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <i class="tim-icons icon-simple-remove"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Navbar -->
            <div class="content">
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/popper.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/perfect-scrollbar.jquery.min.js"></script>
    <!-- Chartist JS -->
    <script src="~/Scripts/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Scripts/black-dashboard.js?v=1.0.0" type="text/javascript"></script>
    <style>
        @{
            double maxheight = 700;
            double halfmaxheight = maxheight/2;
        }

      .cuadro-texto {
        max-height: @halfmaxheight px;
        min-height: @halfmaxheight px;
        overflow-y: scroll;
        align-items: stretch;
      }

      .tabla-compras {
        max-height: @maxheight px;
        min-height: @maxheight px;
        overflow-y: scroll;
      }

      a {
        color: #1D8CF8;
      }

      a:hover {
        color: #859bd1;
      }

      input {
        background-color: #27293D;
        color: #BEBFC5;
        border: solid;
        border-width: 1px;
        border-radius: 2px;
        border-color: #3D3F51;
        padding: 5px;
      }

        @@media (max-width: 1199.98px) {

        .cuadros-texto {
          display: flex;
          justify-content: stretch;
          align-content: stretch;
          width: 100%;
        }

        .cuadro-texto {
          flex-grow: 1;
          flex-basis: auto;
          text-align: center;
        }

        .invertir-sm {
         flex-direction: column-reverse;
        }

        .tabla-compras {
         margin-bottom: 16px;
        }
      }

      hr {
        border-color: #1D8CF8;
      }

      .nav-tabs .nav-link.active,
      .nav-tabs .nav-item.show .nav-link {
        color: #BEBFC5;
        background-color: #27293D;
        border-color: #54648B #54648B #27293D;
      }

      .nav-tabs {
        border-bottom: 0.0625rem solid #54648B;
      }

      .nav-tabs a {
        color: #6d7da5;
      }

      .nav-item .nav-link:hover {
        border-color: #54648B;
      }

      .boton-flotante {
        display: flex;
        align-items: center;
        align-content: space-between;
        font-size: 14px;
        margin: 18px;
        position: fixed;
        right: 0;
        bottom: 0;
        z-index: 999;
      }

      .boton-flotante i {
        font-size: 35px;
      }

      .blur {
        backdrop-filter: blur(3px);
        transition: ease-in-out;
      }
    </style>
</body>
</html>