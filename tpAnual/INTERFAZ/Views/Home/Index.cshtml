@{ 
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>GeSoc - Iniciar sesión</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--  Fonts and icons  -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Black Dashboard CSS -->
    <link href="/Content/black-dashboard.css?v=1.0.0" rel="stylesheet" />
    <link href="/Content/Site.css" rel="stylesheet" />
    <style>
        html,
        body {
            margin: 0 !important;
            height: 100%;
            overflow: hidden !important;
        }

        .foto-fondo {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.8)), url(/Pictures/GeSoc_foto.jpg);
            display: inline-block;
            background-repeat: no-repeat;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            filter: blur(8px);
            -webkit-filter: blur(8px);
            position: absolute;
            height: 100%;
            width: 110%;
            left: -5%;
        }

        .titulo-login {
            color: #f3f3f3;
            text-shadow: 0em 0em 30px black !important;
            font-size: 12vh;
        }

        .subtitulo-login {
            color: #f3f3f3;
            text-shadow: 0em 0em 30px black !important;
            margin-left: 30px;
        }
    </style>
</head>

<body class="">
    <div class="wrapper">
        <div class="main-panel">
            <div class="foto-fondo"></div>
            <div class="content" style="padding-left: 5vw; height:95vh;">
                <div class="row h-100">
                    <div class="col-lg-8 col-md-6">
                        <h1 class="titulo-login">GeSoc</h1>
                        <h4 class="subtitulo-login">Gestión de Proyectos Sociales</h4>
                        <br>
                    </div>
                    <div class="col-lg-4 col-md-6" style="align-self:center;">
                        <div class="card">
                            <div class="card-header">
                                <br>
                                <h1 class="title text-center">Bienvenido!</h1>
                                <br>
                            </div>
                            <div class="card-body">
                                @using (Html.BeginForm("FormSesion", "Usuario", FormMethod.Post))
                                {
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Usuario</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <i class="far fa-user"></i>
                                                    </div>
                                                </div>
                                                <input type="text" class="form-control" name="_usuario" value=@Session["_usuario"] />
                                            </div>
                                            <div class="form-group">
                                                <label>Contraseña</label>
                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                        <div class="input-group-text">
                                                            <i class="fas fa-key"></i>
                                                        </div>
                                                    </div>
                                                    <input type="password" class="form-control" name="_contraseña" value=@Session["_contraseña"]/>
                                                </div>
                                                <br>
                                                @if (Session["erroresFormSesion"] != null)
                                                {
                                                    List<String> errores = (List<String>) Session["erroresFormSesion"];
                                                    foreach (string error in errores)
                                                    {
                                                        <div class="alert alert-danger" role="alert">
                                                            @error
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <button name="_IniciarSesion" type="submit" class="btn btn-fill btn-primary animation-on-hover">Iniciar Sesión</button>
                                        <button name="_Registrarse" type="submit" class="btn btn-primary btn-simple animation-on-hover">Registrarme</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/popper.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/perfect-scrollbar.jquery.min.js"></script>
    <!-- Chartist JS -->
    <script src="~/Scripts/chartjs.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Scripts/black-dashboard.js?v=1.0.0" type="text/javascript"></script>
</body>
</html>